<Container>:
    columns: 2
    
    Label:
        id: animation
        font_size: dp(20)
        text: '<animation>'
        
    BoxLayout:
        orientation: "vertical"
        
        Label:
            id: question
            font_size: dp(20)
            text: 'How often would you like to move?'
            
        TextInput:
            id: timeInput
            text: 'Type in minutes.'
            
        Button:
            text: 'OK'
            on_release: root.AssignTime()
                
        
    